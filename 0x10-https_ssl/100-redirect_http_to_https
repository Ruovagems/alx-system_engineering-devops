# /etc/haproxy/haproxy.cfg

global
    daemon
    maxconn 256

defaults
    mode http
    timeout connect 5000ms
    timeout client 50000ms
    timeout server 50000ms

frontend http_front
    bind *:80
    mode http
    option forwardfor
    redirect scheme https code 301 if !{ ssl_fc }

    default_backend http_back

backend http_back
    mode http
    balance roundrobin
    server web-01 35.175.65.241:80 check
    server web-02 35.175.130.125:80 check
